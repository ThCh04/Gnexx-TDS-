<div class="auth-main">
    <div class="heading">
        <img src="~/assets/img/register-logo.png" alt="#">
        <a asp-controller="Auth" asp-action="Index">Cancelar</a>
    </div>
   

    <div class="form-container" id="loginsect">
        <form asp-action="Auth" asp-controller="Register" method="post">
            <div class="section-register" id="seccion1">
                <h1><span>Inicia sesión</span> para continuar</h1>
                <div class="form-fields" style="gap: 18px;">
                    <div class="section-register" id="seccion2">
                <h1>Información personal</h1>
                 @{
                        if (@Model.HasError)
                        {
                            <h5>@Model.Error</h5>
                        }
                    }
                <div class="form-fields" style="gap: 18px;">
                    <div class="fields">
                        <div class="input-label">
                            <label ASP-for="Firstname">Nombre</label>
                            <input type="text" asp-for="Firstname" name="Firstname" id="name">
                            <span asp-validation-for="Firstname"></span>
                        </div>
                        <div class="input-label">
                            <label ASP-for="Lastname">Apellido</label>
                            <input type="text" asp-for="Lastname" name="Lastname" id="name">
                            <span asp-validation-for="Lastname"></span>
                        </div>
                        <div class="input-label">
                            <label ASP-for="Email">Email</label>
                            <input type="email" asp-for="Email" name="Email" id="name">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="input-label">
                            <label ASP-for="Username">Nombre de Usuario</label>
                            <input type="text" asp-for="Username" name="Username" id="name">
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="input-label">
                            <label ASP-for="PhoneNumber">Telefono</label>
                            <input type="number" asp-for="PhoneNumber" name="PhoneNumber" id="name">
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="input-label">
                            <label ASP-for="ConfirmPassword">Contraseña</label>
                            <input type="password" asp-for="Password" name="Password" id="name">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="input-label">
                            <label ASP-for="ConfirmPassword">Confirmar contraseña</label>
                            <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" id="name">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.Rol, "Rol", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Rol, ViewBag.Rol as SelectList, "-- Selecciona un rol --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                    <div class="button-options">
                        <button type="submit" asp-controller="Auth" asp-action="Register" onclick="mostrarSeccion('seccion1')">Anterior</button>
                        <button type="submit" asp-controller="Auth" asp-action="register">Registrarte</button>
                    </div>

                </div>
                <div class="auth-option">
                    Ya estas registrado? <a href="index.html">Inicia Sesión</a>
                </div>
            </div>
                    <button type="button" onclick="mostrarSeccion('seccion2')">Empezar Registro</button>
                    <p style="color: white;">Tambien puedes</p>
                 
                </div>
                <div class="auth-option">
                    Ya estas registrado? <a asp-controller="Auth" asp-action="Index">Inicia Sesión</a>
                </div>
            </div>

            

            <div class="section-register" id="seccion3">
                <div class="form-fields" style="gap: 18px;">
                    <div class="fields">
                        <div class="input-label">
                            <label for="username">Username</label>
                            <input type="text" name="username" id="username">
                        </div>
                        <div class="input-label">
                            <label for="email">Correo Electrónico</label>
                            <input type="text" name="email" id="email">
                        </div>
                        <div class="input-label">
                            <label for="password">Contraseña</label>
                            <input type="text" name="password" id="password">
                        </div>
                        <div class="input-label">
                            <label for="confirmpassword">Confirmar Contraseña</label>
                            <input type="text" name="confirmpassword" id="confirmpassword">
                        </div>
                    </div>
                    <div class="button-options">
                        <button type="button" onclick="mostrarSeccion('seccion2')">Anterior</button>
                        <button type="submit">Terminar</button>
                    </div>

                </div>
                <div class="auth-option">
                    Ya estas registrado? <a href="index.html">Inicia Sesión</a>
                </div>
            </div>
        </form>
    </div>

</div>
