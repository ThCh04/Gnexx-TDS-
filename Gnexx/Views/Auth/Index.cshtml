@{
    ViewData["Title"] = "Gnexx | Iniciar Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header fs-2 justify-content-center">Iniciar Sesión</div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="email">Correo Electrónico</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="correo@gmail.com" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña:</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a class="" asp-area="" asp-controller="Auth" asp-action="forgot_password">Olvidaste tu contrasena?</a>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>