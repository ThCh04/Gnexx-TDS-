                    <li><div class="separator"></div></li>
                    <li class="dropdown">
                        <button onclick="toggleElementVisibilityById('dropdown2')" class="dropdown-title">Categorias</button>
                        <ul class="dropdown-content" id="dropdown2" style="display: none" ;>
                            <li class="dropdown-item"><a href="#">Aventura</a></li>
                            <li class="dropdown-item"><a href="#">Zombies</a></li>
                            <li class="dropdown-item"><a href="#">Battle Royale</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>


    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/Auth/script_register.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Obtén referencias al botón y al contenedor
            var toggleButton = document.getElementById("toggleButton");
            var navbar = document.querySelector(".navbar");

            // Agrega un evento de clic al botón
            toggleButton.addEventListener("click", function () {
                // Alternar la clase 'shrink' para cambiar el ancho con animación
                navbar.classList.toggle("active");
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
