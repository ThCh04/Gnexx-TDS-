<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gnexx</title>

    <link rel="stylesheet" href="~/css/Auth/register-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Auth/login-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Auth/layout-styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@100;200;300;400;500;600;700;800;900&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>

    <div class="auth-section">
        <div class="picture">
            <img src="~/assets/img/register-logo.png" alt="#" class="logo">
        </div>
        <div class="form-container">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
